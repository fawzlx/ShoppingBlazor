@page "/stuff/add"
@rendermode InteractiveServer

<h3>افزودن کالا</h3>

<form class="row g-3 shadow rounded-4">
    <div class="col-md-4">
        <label for="name" class="form-label">نام کالا</label>
        <input type="text" class="form-control" id="name">
    </div>
    <div class="col-md-4">
        <label for="categoryId" class="form-label">نام دسته بندی</label>
        <select id="categoryId" class="form-select">
            <option selected>انتخاب کنید...</option>
            <option>دسته بندی اول</option>
            <option>دسته بندی دوم</option>
        </select>
    </div>
    <div class="col-md-4">
        <label for="brandId" class="form-label">نام برند</label>
        <select id="brandId" class="form-select">
            <option selected>انتخاب کنید...</option>
            <option>برند اول</option>
            <option>برند دوم</option>
        </select>
    </div>
    <div class="col-md-4">
        <label for="producerName" class="form-label">نام تأمین کننده</label>
        <input type="text" class="form-control" id="producerName">
    </div>
    <div class="col-md-4">
        <label for="number" class="form-label">موجودی</label>
        <input type="number" class="form-control" id="number">
    </div>
    <div class="col-md-4">
        <label for="amount" class="form-label">قیمت</label>
        <div class="input-group">
            <span class="input-group-text">ريال</span>
            <input type="text" class="form-control" id="amount" aria-label="Amount (to the nearest dollar)">
        </div>
    </div>
    <div class="col-md-4">
        <label for="producerEmail" class="form-label">ایمیل تأمین کننده</label>
        <input type="email" class="form-control" id="producerEmail">
    </div>
    <div class="col-md-4">
        <label class="form-label">تاریخ نمایش</label>
        <div class="input-group">
            <span class="input-group-text">از</span>
            <input type="text" aria-label="First name" class="form-control">
            <span class="input-group-text">تا</span>
            <input type="text" aria-label="Last name" class="form-control">
        </div>
    </div>
    <div class="col-md-4">
        <label for="number" class="form-label">رنگ بندی محصول</label>
        <div class="order-md-1 d-flex gap-2">
            <button type="button" class="btn btn-primary bi-plus-lg rounded-3 d-flex align-items-center justify-content-center aspect-ratio aspect-ratio-1x1 p-2"></button>
        </div>
    </div>
    <div class="col-md-4">
        <div>
            <label for="photos" class="form-label">تصویر کالا</label>
            <input class="form-control" type="file" id="photos" multiple>
        </div>
    </div>
    <div class="col-md-4">
        <div>
            <label for="catalogs" class="form-label">کاتالوگ کالا</label>
            <input class="form-control" type="file" id="catalogs" multiple>
        </div>
    </div>
</form>

