@code {
    public IList<StuffDto> Stuffs { get; set; } = [];

    public EditStuffRequest? SelectedStuffForEdit { get; set; }

    protected override void OnInitialized()
    {
        var stuffs = ProductService.Stuffs(new StuffPagination());

        if (!stuffs.IsError) Stuffs = stuffs.Value;
    }

    public void Edit(StuffDto stuff)
    {
        SelectedStuffForEdit = stuff.Adapt<EditStuffRequest>();
    }
}