@page "/category"
@rendermode InteractiveServer

<h3>بسته بندی‌ها</h3>

<div class="container-fluid gap-3 d-grid md-flex">
    <div class="row shadow rounded-4">
        <div class="col m-2">
            <label>نام</label>
            <input type="text" class="form-control mt-2 rounded-3" placeholder="نام دسته بندی" aria-label="name">
        </div>
        <div class="col m-2">
            <label>گروه</label>
            <div class="dropdown">
                <button class="rounded-3 mt-2 container-fluid btn btn-secondary dropdown-toggle text-end" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    انتخاب
                </button>
                <ul class="dropdown-menu dropdown-menu-lg-start rounded-3">
                    <li>
                        <a class="dropdown-item text-end" href="#">گروه اول</a>
                    </li>
                    <li>
                        <a class="dropdown-item text-end" href="#">گروه دوم</a>
                    </li>
                    <li>
                        <a class="dropdown-item text-end" href="#">گروه سوم</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="m-2 d-grid gap-2 d-md-flex">
            <button type="button" class="btn btn-primary btn-sm rounded-3">جستجو</button>
            <button type="button" class="btn btn-secondary btn-sm rounded-3">نمایش همه</button>
        </div>
    </div>

    <div class="row shadow rounded-4 table-responsive">
        <table class="table table-striped table-hover rounded-3 align-middle text-nowrap">
            <thead>
            <tr class="align-middle">
                <th scope="col">شناسه</th>
                <th scope="col">
                    <div class="input-group">
                        <span class="d-flex align-items-center ms-2">نام دسته بندی</span>
                        <input type="text" class="form-control rounded-end-3" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
                        <button class="btn btn-outline-secondary bi bi-funnel-fill rounded-start-3 d-flex align-items-center justify-content-center" type="button" id="button-addon1"></button>
                    </div>
                </th>
                <th scope="col">
                    <div class="input-group">
                        <span class="d-flex align-items-center ms-2">نام گروه</span>
                        <input type="text" class="form-control rounded-end-3" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon2">
                        <button class="btn btn-outline-secondary bi bi-funnel-fill rounded-start-3 d-flex align-items-center justify-content-center" type="button" id="button-addon2"></button>
                    </div>
                </th>
                <th scope="col">عملیات</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>
                    <button class="rounded-3 btn btn-sm btn-warning bi bi-pencil-fill"></button>
                    <button class="rounded-3 btn btn-sm btn-danger bi bi-trash-fill"></button>
                </td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>
                    <button class="rounded-3 btn btn-sm btn-warning bi bi-pencil-fill"></button>
                    <button class="rounded-3 btn btn-sm btn-danger bi bi-trash-fill"></button>
                </td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td colspan="2">Larry the Bird</td>
                <td>
                    <button class="rounded-3 btn btn-sm btn-warning bi bi-pencil-fill"></button>
                    <button class="rounded-3 btn btn-sm btn-danger bi bi-trash-fill"></button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <nav aria-label="Page navigation example" class="order-md-2">
            <ul class="pagination justify-content-start">
                <li class="page-item">
                    <a class="page-link rounded-end-3" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link rounded-start-3" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="order-md-1 d-flex gap-2">
            <button type="button" class="btn btn-primary bi-plus-lg rounded-circle d-flex align-items-center justify-content-center aspect-ratio aspect-ratio-1x1 p-3"></button>
            <button type="button" class="btn btn-secondary bi bi-file-earmark-spreadsheet rounded-circle d-flex align-items-center justify-content-center aspect-ratio aspect-ratio-1x1 p-3"></button>
        </div>
    </div>
</div>

